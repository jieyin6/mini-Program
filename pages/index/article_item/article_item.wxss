.item_container{
    display: flex;
    flex-direction: column;
    margin: 20rpx 0 40rpx 0;
    border: 1px solid #ededed;
    background-color: #fff;
    padding-bottom: 5rpx;
}
.item_header{
    margin: 10rpx 0 20rpx 10rpx;
}
.item_header image{
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle
}
.item_header text{
    margin-left:20rpx;
    margin-bottom: 5px;
    font-size:26rpx;
    vertical-align: middle;
}
.item_title{
    margin:0 0 10rpx 10rpx;
    font-size:34rpx;
    font-weight: 600;
    color:#333;
}
.item_img{
    width:100%;
    height:340rpx;
    margin: 0 auto;
    margin-bottom: 15px;
}
.item_content{
    margin:0 0 20rpx 20rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
    color:#666;
    font-size:28rpx;
}
.item_icon{
    flex-direction: row;
    line-height:16px;
    margin-left:10px;
    font-size:13px;
}
.item_icon_image{
    height:16px;
    width:16px;
    margin-right: 8px;
    vertical-align: middle;
}
.item_icon_text{
    margin-right: 20px;
    vertical-align: middle;
}