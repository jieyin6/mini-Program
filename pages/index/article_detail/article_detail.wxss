.detail_item{
    display: flex;
    flex-direction: column;
  }
.banner_container{
    position: relative;
}
.item_bannar{
    width:100%;
    height:450rpx;
}
.banner_icon{
    position: absolute;
    bottom: 50rpx;
    right: 50rpx;
    width: 80rpx;
    height: 80rpx;
}
.audio{
    width:102rpx;
    height: 110rpx;
    position:absolute;
    left:50%;
    margin-left:-51rpx;
    top:180rpx;
    opacity: 0.6;
  }
.item_author{
    flex-direction: row;
    margin:50rpx 0 0 30rpx;
  }
.author_avatar{
    width:64rpx;
    height:64rpx;
    vertical-align: middle;
}
.author_name{
    margin-left:20rpx;
    vertical-align: middle;
    font-size: 30rpx;
    font-weight:300;
    color:#666;
}
.author_text{
    margin-left:20rpx;
    font-size:24rpx;
    color:#999;
}
.author_date{
    margin-left:30rpx;
    vertical-align: middle;
    font-size:24rpx;
    color:#999;
  }
.item_title{
    margin-left:40rpx;
    margin-top:30rpx;
    font-size:36rpx;
    font-weight:700;
    letter-spacing: 2px;
    color:#4b556c;
  }
.item_tool{
    margin-top:20rpx;
  }
.tool_circle{
    float:right;
    margin-right:40rpx;
    vertical-align: middle;
  }
.tool_circle image{
    width:90rpx;
    height:90rpx;
  }
.tool_share{
    margin-left:30rpx;
  }
.tool_horizon{
    position: relative;
    top:46rpx;
    width:660rpx;
    height: 1px;
    margin:0 auto;
    background-color: #e5e5e5;
    vertical-align: middle;
    z-index:-99;
  }
.item_article{
    color:#666;
    margin:20rpx 30rpx 20rpx 20rpx;
    line-height: 44rpx;
    letter-spacing: 2rpx;
    font-size:24rpx;
  }